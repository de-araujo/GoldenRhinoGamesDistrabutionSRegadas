<Window x:Class="GoldenRhinoGameDistribution.Library"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoldenRhinoGameDistribution"
        mc:Ignorable="d"
        Title="Library" Height="800" Width="300" WindowStartupLocation="CenterScreen">
    <ScrollViewer Margin="0,28,0,0" Grid.RowSpan="2" Background="#FF8E0004" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" x:Name="GameGrid"/>
        <StackPanel  x:Name="ownedGames">
                <Label Content="Owned Games" Foreground="#FFFFC926"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
